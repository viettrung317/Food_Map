<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">
    <include layout="@layout/layout"></include>

    <ImageButton
        android:id="@+id/ibtnUser"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/ibtnHome"
        app:srcCompat="@drawable/user"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibtnHistory"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnUser"
        app:layout_constraintEnd_toStartOf="@+id/ibtnUser"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toEndOf="@+id/ibtnHome"
        app:layout_constraintTop_toTopOf="@+id/ibtnUser"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/history"
        android:background="@color/black"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibtnOrder"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnHistory"
        app:layout_constraintEnd_toStartOf="@+id/ibtnHistory"
        app:layout_constraintStart_toEndOf="@+id/ibtnHome"
        app:layout_constraintTop_toTopOf="@+id/ibtnUser"
        app:srcCompat="@drawable/order"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibtnHome"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnOrder"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ibtnOrder"
        android:background="@color/black"
        app:srcCompat="@drawable/home"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/ibtnMenu"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/menu"
        tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck" />

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="16dp"
        android:background="@color/black"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ibtnMenu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ibtnMenu"
        app:layout_constraintTop_toTopOf="@+id/ibtnMenu">

        <EditText
            android:id="@+id/textSeach"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:drawableRight="@drawable/search"
            android:hint="Tìm kiếm ..."
            android:padding="10dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/ibtnMenu"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ibtnMenu"
            app:layout_constraintTop_toTopOf="@+id/ibtnMenu" />
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>