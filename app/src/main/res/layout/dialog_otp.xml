<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_edit"
    android:layout_margin="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_aqua"
        android:gravity="center"
        android:padding="12dp"
        android:text="Nhập mã OTP"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/txtMaOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_edittext"
            android:gravity="center"
            android:hint="Nhập mã OTP"
            android:inputType="number"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textColorHint="#726c6c" />
        <TextView
            android:id="@+id/txtSendAgainOTP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gửi lại mã"
            android:layout_marginTop="20dp"
            android:textColor="@color/color_menu"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btnCancelOTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_edittext"
                android:textColor="@color/white"
                android:text="Cancel"
                android:layout_marginRight="20dp"/>

            <Button
                android:id="@+id/btnLoginOTPdialog"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/bg_buttoncreate"
                android:text="accept" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>